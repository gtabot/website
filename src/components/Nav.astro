---
const navData = [
    { name: "About", path: "/" },
    { name: "Blog", path: "/blog" },
    { name: "Projects", path: "/projects" },
    { name: "Services", path: "/services" },
    { name: "Resume", path: "/resume" },
    { name: "Links", path: "/links" }
]
---
<nav>
    <div class="navbar">
        <a href="/" class="nav-title">TheyCallMeGTab.dev</a>
        <button class="hamburger" aria-label="Toggle Menu">
            <span></span>
            <span></span>
            <span></span>
        </button>
        <ul>
            {
                navData.map(item => (
                    <li><a href={item.path}>{item.name}</a></li>
                ))
            }
        </ul>
    </div>
</nav>

<style>
    nav {
        background-color: #000000;
    }

    .navbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 0 auto;
    }

    .nav-title {
        font-weight: bold;
        text-decoration: none;
        color: #ffffff;
        padding: 7px 14px;
        border-radius: 5px;
    }

    .nav-title:hover {
        background-color: #404040;
    }

    ul {
        list-style: none;
        display: flex;
    }

    ul li {
        margin-left: 1em;
        background-color: #;
        border-radius: 5px;
    }

    ul li:first-child {
        margin-left: 0;
    }

    ul li:hover {
        background-color: #404040;
    }

    ul li a {
        text-decoration: none;
        color: #ffffff;
        display: inline-block;
        padding: 7px 14px;
    }

    .hamburger {
        display: none;
        cursor: pointer;
        background: none;
        border: none;
        padding: 10px;
    }

    .hamburger span {
        display: block;
        width: 25px;
        height: 3px;
        margin-bottom: 5px;
        background-color: #ffffff;
    }

    @media screen and (max-width: 768px) {
        ul {
            display: none;
        }

        .hamburger {
            display: block;
        }

        ul.nav-open {
            display: flex;
            flex-direction: column;
        }
    }
</style>

<script>
    const hamburgerButton = document.querySelector('.hamburger');
    const navMenu = document.querySelector('ul');

    hamburgerButton.addEventListener('click', () => {
        navMenu.classList.toggle('nav-open');
    });
</script>