    text-shadow: 3px 1px 0 rgb(0, 0, 0);
  }

  #blog-all {
    color: initial;
    font-size: 1.1em;
  }

  @media (max-width: 768px) {
    #blog-prev-next {
      flex-direction: column;
      align-items: center;
      margin-top: 1em;
