---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Page Not Found">
	<div id="header">
		<h1 class="large" align="center">404 Error</h1>
		<p id="page_not_found">The page you're looking for is not found</p>
	</div>
	<div id="container">
		<div id="_404">
			<div id="text">

				<div style="padding: 0 1em">
					<strong>Buuuut since you're already here... you may be interested in these other pages:</strong>
					<ul>
						<li><p><strong class="other-page-title">Random Blog Post:</strong> <a href="#" class="other-page-link">Title of a Random Blog Post</a></p></li>
						<li><p><strong class="other-page-title">Random Project:</strong> <a href="#" class="other-page-link">Title of a Random Project</a></p></li>
					</ul>
				</div>
			</div>
			<div id="image">
				<img src="/images/404.png">
			</div>
		</div>
	</div>
</MainLayout>

<style lang="scss">
	@import '../styles/global.scss';

	#header {
		text-align: center;
		margin-bottom: 2em;
	}

	#header h1 {
		margin-bottom: 0
	}

	#_404 {
		display: flex;
		align-items: center;
	}

	#_404 #text {
		flex: 1;
	}

	#_404 #image {
		flex: 1;
		text-align: center;
	}

	#_404 #image img {
		width: 75%;
		max-width: 350px;
		border-radius: 25%;
		margin: 1em 0;
	}

	.other-page-title {
		font-weight: 600;
	}

	@media (max-width: 768px) {
		#header h1 {
			margin: 0 auto;
		}

		#_404 {
			flex-direction: column;
		}

		.other-page-title, .other-page-link {
			display: block;
		}
	}
</style>
